<!DOCTYPE html>
<html>
  <head>
    <title>Anomalous</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>

    <div id="flash-messages" class="mt-3">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg.html_safe, :id => "flash_#{name}", :class => "alert alert-danger" %>
      <% end %>
    </div>
    <div class="wrapper">
      <main class="main">
        <div class="container">
            <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
