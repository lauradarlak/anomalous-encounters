<!DOCTYPE html>
<html>
  <head>
    <title>Anomalous</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>

    <div id="flash-messages" class="mt-3">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg.html_safe, :id => "flash_#{name}", :class => "alert alert-info" %>
      <% end %>
    </div>
    <div class="wrapper">
        <div class="container">
          <div class="row">
            <div class="col-md-8">
              <div class="jumbotron jumbotron-fluid mb-0">
                <div class="container">
                  <h1 class="display-4 align-text-bottom text-center">Anomalous Encounters</h1>
                </div>
              </div>
              <%= yield %>
            </div>
            <div class="col-md-4">
              <% if content_for?(:sidebar) %>
                <%= yield(:sidebar) %>
              <% else %>
              <%= render 'layouts/new_encounter' %>
              <% end %>
              <%= render partial: 'layouts/sidebar', locals: {tags: @top_tags, categories: @categories} %>
            </div>
          </div>
        </div>
    </div>
  </body>
</html>
