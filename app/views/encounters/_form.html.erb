<%= form_for(@encounter, url: user_encounters_path) do |f| %>
  <%= f.label :date %>
  <%= f.date_select(:date) %>
  <br>
  <%= f.label :time %>
  <%= f.time_select(:time, {ampm: true}) %>
  <br>
  <%= f.label :state %>
  <%= f.select :state, options_for_select(us_states) %>
  <br>
  <%= f.label :county %>
  <%= f.text_field :county %>
  <br>
  <%= f.label :nearest_town %>
  <%= f.text_field :nearest_town %>
  <br>
  <%= f.label :conditions %>
  <%= f.text_field :conditions %>
  <br>
  <%= f.label :environment %>
  <%= f.text_field :environment %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :witnesses %>
  <%= f.collection_radio_buttons :witnesses, [[true, 'Yes'] ,[false, 'No']], :first, :last %>
  <br>
  <%= f.label  :category_id %>
  <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name, @encounter.category_id) %>
  <br>
  <%= f.submit %>

<% end %>
