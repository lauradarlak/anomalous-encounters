<%= form_for(@encounter, url: user_encounters_path) do |f| %>
  <%= f.label :date %>
  <%= f.date_select(:date) %>
  <br>
  <%= f.label :time %>
  <%= f.time_select(:time, {ampm: true}) %>
  <br>
  <%= f.label :state %>
  <%= f.select :state, options_for_select(us_states) %>
  <br>
  <%= f.label :county %>
  <%= f.text_field :county %>
  <br>
  <%= f.label :nearest_town %>
  <%= f.text_field :nearest_town %>
  <br>
  <%= f.label :conditions %>
  <%= f.text_field :conditions %>
  <br>
  <%= f.label :environment %>
  <%= f.text_field :environment %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :witnesses %>
  <%= f.collection_radio_buttons :witnesses, [[true, 'Yes'] ,[false, 'No']], :first, :last %>
  <br>
  <%= f.label  :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
  <br>
  <p>Or, create new tags (separated by commas):</p>
  <br>
  <%= f.label :tag_list, "Tags (separated by commas)" %><br />
  <%= f.text_field :tag_list %>


  <%= f.submit %>

<% end %>
