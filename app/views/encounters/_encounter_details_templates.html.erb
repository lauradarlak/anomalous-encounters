<script id="brief-encounter-template" type="text/x-handlebars-template">
  <h6 class="card-title">Reported by: <a href="/{{user_display_name}}/encounters">{{user_display_name}}</a></h6>
  <p class="card-text">Date of Encounter: {{date}}</p>
  <p class="card-text">State: {{state}}</p>
  <p class="card-text">Description of Encounter: {{short_description}}</p>
  <p class="card-text">Category: <a href="/categories/{{category_slug}}">{{category}}</a></p>
  <div class="card-footer">
    Tags:
    {{#each tags}}
    <span><a class="badge badge-info" href="/tags/{{this.slug}}">{{this.name}}</a></span>
    {{/each}}
  </div>
</script>

<script id="full-encounter-template" type="text/x-handlebars-template">
  <h6 class="card-title">Reported by: <a href="/{{user_display_name}}/encounters">{{user_display_name}}</a></h6>
  <p class="card-text"><span>Date of Encounter:</span> {{date}}</p>
  <p class="card-text"><span>State:</span> {{state}}</p>
  <p class="card-text"><span>County:</span> {{county}}</p>
  <p class="card-text"><span>Nearest Town:</span> {{nearest_town}}</p>
  <p class="card-text"><span>Conditions:</span> {{conditions}}</p>
  <p class="card-text"><span>Environment:</span> {{environment}}</p>
  <p class="card-text"><span>Witnesses:</span> {{witnesses}}</p>
  <p class="card-text"><span>Description of Encounter:</span> {{description}}</p>
  <p class="card-text">Category: <a href="/categories/{{category_slug}}">{{category}}</a></p>

  <div class="card-footer">
    Tags:
    {{#each tags}}
    <span><a class="badge badge-info" href="/tags/{{this.slug}}">{{this.name}}</a></span>
    {{/each}}
  </div>
</script>
