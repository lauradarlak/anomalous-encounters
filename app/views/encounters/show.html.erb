<div class="py-3 my-3" style="background: #246499;">
  <h2 class="display-6 text-center mb-0 text-white">Encounter Details</h2>
</div>
<div id="single-encounter" class="card">
  <div class="card-body">
    <h5 class="card-title">Case ID: <%= @encounter.id %>
      <% if user_signed_in? && @encounter.user_id == current_user.id %>
        <span class="pull-right"><%= link_to "Edit Encounter", edit_user_encounter_path(@encounter.user.display_name, @encounter) %></span>
      <% end %>
    </h5>
    <h6 class="card-title">Reported by: <%= link_to @encounter.user.display_name, user_encounters_path(@encounter.user.display_name) %></h6>
    <p class="card-text"><span>Date of Encounter:</span> <%= @encounter.date.to_s(:encounter_date) %></p>
    <p class="card-text"><span>Time of Encounter:</span> <%= @encounter.time.to_s(:encounter_time) %></p>
    <p class="card-text"><span>State:</span> <%= @encounter.state %></p>
    <p class="card-text"><span>County:</span> <%= @encounter.county %></p>
    <p class="card-text"><span>Nearest Town:</span> <%= @encounter.nearest_town %></p>
    <p class="card-text"><span>Conditions:</span> <%= @encounter.conditions %></p>
    <p class="card-text"><span>Environment:</span> <%= @encounter.environment %></p>
    <p class="card-text"><span>Witnesses:</span> <%= yesno(@encounter.witnesses) %></p>
    <p class="card-text"><span>Description of Encounter:</span> <%= @encounter.description %></p>
    <p class="card-text"><span>Category:</span> <%= link_to @encounter.category.name, category_path(@encounter.category.slug) %></p>

    <div class="card-footer">
      <span>Tags: <%= raw @encounter.tags.map(&:name).map { |t| link_to t, tag_path(t.parameterize), :class => "badge badge-info"}.join(' ') %></span>
    </div>
  </div>
</div><!-- /.card -->

<script id="single-encounter-template" type="text/x-handlebars-template">
  <div id="single-encounter" class="card" id="encounter_{{id}}">
    <div class="card-body">
      <h5 class="card-title">Case ID: {{id}}
      </h5>
      <h6 class="card-title">Reported by: <a href="/{{user_display_name}}/encounters">{{user_display_name}}</a></h6>
      <p class="card-text"><span>Date of Encounter:</span> {{date}}</p>
      <p class="card-text"><span>Time of Encounter:</span> {{time}}</p>
      <p class="card-text"><span>State:</span> {{state}}</p>
      <p class="card-text"><span>County:</span> {{county}}</p>
      <p class="card-text"><span>Nearest Town:</span> {{nearest_town}}</p>
      <p class="card-text"><span>Conditions:</span> {{conditions}}</p>
      <p class="card-text"><span>Environment:</span> {{environment}}</p>
      <p class="card-text"><span>Witnesses:</span> {{witnesses}}</p>
      <p class="card-text"><span>Description of Encounter:</span> {{description}}</p>
      <p class="card-text">Category: <a href="/categories/{{category_slug}}">{{category}}</a></p>
      <p class="card-text"><span>Category:</span> <a href="/categories/sasquatch">Sasquatch</a></p>
      <div class="card-footer">
        Tags:
        {{#each tags}}
        <span><a class="badge badge-info" href="/tags/{{this.slug}}">{{this.name}}</a></span>
        {{/each}}
      </div>
    </div>
  </div>
</script>
