
<div class="card">
  <div class="card-body">
    <h5 class="card-title">Encounter Categories</h5>
    <% @categories.each do |cat| %>
    <p class="card-text"><%= link_to cat.name, category_encounters_path(cat.slug) %><span class="ml-2 badge badge-pill badge-primary"><%= cat.encounters.count %></span></p>
    <% end %>
  </div>
</div>
